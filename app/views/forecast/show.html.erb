<h1>Weather Forecast</h1>
<br/>
<div class="login">
  	<%= form_with(method: 'get', local: true) do %>
       <label><b>Address Details</b></label></br>
       <%= text_area_tag(:address, @address, size: 70, :class => "text_tag") %>
       <%= submit_tag("Get Information", :class => "btn" ) %>
    <% end %>
    <% if defined?(@weather) %>
      <ul>
      	<img src="https://openweathermap.org/img/wn/<%= @weather.icon %>@2x.png" class="center"/>
      	<label><b><%= @weather.description %></b></label></br>
        <li>Temperature: <%= @weather.temperature %> ℃</li>
        <li>Temperature Minimum: <%= @weather.temperature_min %> ℃ <br/> Maximum: <%= @weather.temperature_max %> ℃</li>
        <li>Humidity: <%= @weather.humidity %>%</li>
        <li>Pressure: <%= @weather.pressure %> millibars</li>
        <li>Is this result from the cache? <%= @weather_cache_exist %>
      </ul>
    <% end %>
</div>
